# https://git-scm.com/docs/git-config#_configuration_file
[core]
	quotepath = false # 日本語コミットの文字コード化を防ぐ
	editor = vim
	pager = less -cm

[color]
	ui = true
	diff = true

[credential]
	helper = /usr/local/bin/git-credential-manager
	credentialStore = gpg

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[gui]
	encoding = utf-8 # 文字コード設定

[merge]
	ff = false
	conflictstyle = diff3
	tool = vimdiff

[mergetool]
	prompt = false

[receive]
	denyNonFastforwards = false # 強制pushを許可

[pull]
	ff = only

[url "https://github.com/"]
	insteadOf = http://github.com/
	insteadOf = git@github.com:
	insteadOf = git://github.com/
	insteadOf = gh://

[include]
	path = config.d/user.ini
	path = config.d/aliases.ini

# Please add the settings you want to overwrite.
[include]
	path = config.d/local/config
