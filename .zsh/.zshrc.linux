# +++ RPROMPT Setting {{{
if is-at-least 4.3.10; then
    # ++++ Use vcs_info {{{
    function branch-mark {
        echo '\ue0a0^ '
    }
    autoload -Uz vcs_info
    zstyle ':vcs_info:*' enable git
    zstyle ':vcs_info:*' formats "%F{green}%c%u`branch-mark`[%b]%f"
    if is-at-least 4.3.10; then
        zstyle ':vcs_info:git:*' check-for-changes true
