# +++ PROMPT Setting {{{
function left-prompt {
    FIRST='025m%}'      # ãƒ¦ãƒ¼ã‚¶, ãƒ›ã‚¹ãƒˆåã®æ–‡å­—è‰²
    FIRST_B='254m%}'    # ãƒ¦ãƒ¼ã‚¶, ãƒ›ã‚¹ãƒˆåã®èƒŒæ™¯è‰²
    SECOND='007m%}'     # ã‚«ãƒ¬ãƒ³ãƒˆãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®æ–‡å­—è‰²
    SECOND_B='238m%}'   # ã‚«ãƒ¬ãƒ³ãƒˆãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®èƒŒæ™¯è‰²

    sharp='\ue0b0'
    FG='%{[38;5;'
    BG='%{[30;48;5;'
    RESET='%{[0m%}'
    USER_AND_HOST="${BG}${FIRST_B}${FG}${FIRST}"
    DIR="${BG}${SECOND_B}${FG}${SECOND}"

    echo "${USER_AND_HOST}%n@%m${BG}${SECOND_B}${FG}${FIRST_B}${sharp} ${DIR}%~${RESET}${FG}${SECOND_B}${sharp} ${RESET}"
}
PROMPT='`left-prompt`'
